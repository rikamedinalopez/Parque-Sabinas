<Window x:Class="Parque_Sabinas.dialogs.AddCaja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Parque_Sabinas.dialogs"
        mc:Ignorable="d"
        Height="250" Width="300" ResizeMode="NoResize" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="80"/>

            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridTitleBar" Grid.ColumnSpan="3" Background="#FF005299">

            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Agregar Caja" Foreground="White" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" FontSize="22" FontWeight="Bold"/>
            </StackPanel>

        </Grid>



        <Grid Grid.Row="2" Grid.Column="0">

            <StackPanel Orientation="Vertical">
                <TextBox x:Name="txtCajaName" Margin="10" FontSize="14"
                  materialDesign:HintAssist.Hint="Nombre de la caja"
                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

            </StackPanel>
        </Grid>

        <Grid Grid.Row="3" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSaveCaja" Margin="0 0 20 0" Background="#FF005299" Width="160" Content="Agregar" Click="BtnSaveCaja_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
